<main class="p-5">
  <div class="tea-list is-flex-direction-row is-flex-wrap-wrap container ">
    {{#each teaList}}
      <a href="/tea/{{this.id}}" class="m-1 p-1 is-two-thirds card">
        <div class="card-image">
          <figure class="image is-3by1">
            <img src="https://www.comunicaffe.com/wp-content/uploads/2015/02/green-tea-leaves-640x400.jpg" alt="">
          </figure>
        </div>
        <div class="card-content">
          <div class="title is-4 card-header-title">
            {{this.name}}
          </div>
        </div>
        <div class="card-content ">{{this.description}}</div>
      </a>
    {{/each}}
  </div>
   <div class="columns">
    <div class="column"></div>
    <div class="column is-two-thirds" id='mapbox' style='width: 1000px; height: 600px;'></div>
    <div class="column"></div>
    </div>
</main>

